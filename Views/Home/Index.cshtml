@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Home Page";

    string statusHelper(bool value)
    {
        if (value)
            return "<span class='badge bg-success'>Lengkap</span>";
        else
            return "<span class='badge bg-danger'>Tidak Lengkap</span>";
    }

}

<div id="app">
    <div class="row mb-3">
        <div class="col">
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <button class="nav-link active text-primary" id="nav-home-tab" data-bs-toggle="tab"
                        data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home"
                        aria-selected="true">@ViewBag.Agensi</button>

                </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                    <div class="p-2">
                        <div class="border rounded p-2 mb-3 mt-3">
                            <p class="small text-primary"><span class="fa-solid fa-chevron-down"></span> Bayaran </p>
                            <div class="row">
                                <div class="col-3">
                                    <div class="p-3">
                                        <h3>RM @ViewBag.TotalFee</h3>
                                        <p class="small text-secondary">Selepas pendaftaran pasukan sudah lengkap dan muktamat,
                                            sila buat bayaran dan muat naik resit.</p>
                                        <pre class="small">@ViewBag.BankName<br>@ViewBag.BankAccount</pre>
                                    </div>

                                </div>

                                <div class="col-3">

                                    <p class="small text-secondary"><span class="text-dark">Perakaun</span>: Saya
                                        mengesahkan bahawa, segala maklumat yang didaftarkan dalam sistem ini adalah benar.
                                    </p>

                                    <div class="row mt-2">
                                        <div class="col">
                                            <input type="file" class="form-control" accept=".pdf,.jpg"
                                                @@change="handleFileChange()">
                                        </div>
                                        <div class="col-auto">
                                            <button class="btn btn-outline-dark btn" @@click="uploadResit()">Muat
                                                Naik</button>
                                        </div>
                                    </div>

                                    <div v-if="Resit" class="mt-2 text-danger">
                                        <span class="fa-solid fa-receipt"></span>
                                        <a :href="'/uploads/@ViewBag.Agensi/' + Resit" target="_blank"
                                            class="small">Lihat Resit</a>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="border rounded p-2">
                            <div class="row mb-3">
                                <div class="col">
                                    <p class="small text-primary"><span class="fa-solid fa-chevron-down"></span> Senarai
                                        Pendaftaran</p>
                                </div>
                                <div class="col-auto">
                                    <a class="btn btn-primary" asp-action="Pasukan">Kemaskini Pasukan</a>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="table-responsive">
                                        <table class="table table-sm small">
                                            <tr>
                                                <th></th>
                                                <th>Sukan</th>
                                                <th>Yuran Pendaftaran</th>
                                                <th><span class="fa-solid fa-user-tie text-secondary small"></span>
                                                    Pengurus
                                                </th>
                                                <th><span
                                                        class="fa-solid fa-person-chalkboard text-secondary small"></span>
                                                    Jurulatih
                                                </th>
                                                <th> <span class="fa-solid fa-user-doctor text-secondary small"></span>
                                                    Fisio
                                                </th>
                                                 <th><span class="fa-solid fa-people-group text-secondary small"></span>
                                                    Pemain                                                    
                                                </th>
                                                <th><span class="fa-solid fa-people-group text-secondary small"></span>
                                                    Bil Pemain                                                    
                                                </th>
                                                <th>
                                                    </td>
                                            </tr>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        <img class="img-sm rounded-circle"
                                                            src='@Url.Content("~/images/sukan-icons/" + item.Sukan + ".jpg")' />
                                                    </td>
                                                    <td class="align-middle">@item.Sukan</td>
                                                    <td class="align-middle">RM @item.Fee.ToString("#,00.00")</td>
                                                    <td class="align-middle">
                                                        @if (item.Pengurus_Gambar != null)
                                                        {
                                                            <img class="img-sm rounded-circle" src='@Url.Content("~/uploads/" + item.Pengurus_Id + "/" + item.Pengurus_Gambar)' />
                                                        }
                                                        
                                                        @Html.Raw(statusHelper(item.Pengurus))
                                                    </td>
                                                    <td class="align-middle">
                                                         @if (item.Jurulatih_Gambar != null)
                                                        {
                                                            <img class="img-sm rounded-circle" src='@Url.Content("~/uploads/" + item.Jurulatih_Id + "/" + item.Jurulatih_Gambar)' />
                                                        }
                                                        @Html.Raw(statusHelper(item.Jurulatih))
                                                    </td>
                                                    <td class="align-middle">@Html.Raw(statusHelper(item.Fisio))</td>
                                                    <td class="align-middle">@Html.Raw(statusHelper(item.Pemain == item.Bilangan))</td>
                                                    <td class="align-middle">@item.Pemain / @item.Bilangan</td>
                                                    <td></td>
                                                </tr>
                                            }
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var app = new Vue({
            el: '#app',
            data: {
                Resit: null,
                TempResit: null,
            },
            computed: {

            },
            mounted() {
                this.getResit();
            },
            methods: {
                handleFileChange() {
                    app.TempResit = event.target.files[0];
                },

                getResit: function () {
                    $.ajax({
                        url: '/Home/getResit',
                        type: 'GET',
                        success: function (data) {
                            if (data.status == true) {
                                app.Resit = data.resit;
                            }
                            else {
                                app.Resit = null;
                            }
                        },
                        error: function (error) {
                            console.log(error);
                        }
                    });
                },

                uploadResit: function () {

                    var formData = new FormData();
                    formData.append('file', app.TempResit);

                    $.ajax({
                        url: 'uploadResit',
                        type: 'POST',
                        data: formData,
                        contentType: false,
                        processData: false,
                        success: function (data) {
                            if (data.status == true) {
                                toastr.success('Resit berjaya dimuat naik');
                                app.getResit();
                            }
                            else {
                                toastr.error('Fail gagal dimuat naik');
                            }
                        },
                        error: function (error) {
                            console.log(error);
                        }
                    });
                },
            },
        })
    </script>
}